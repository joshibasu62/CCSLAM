<?xml version="1.0"?>
<robot name="x500_drone">

  
  <link name="x500_drone_0/base_link"/>
  <link name="x500_drone_0/x500_depth_0"/>
  <link name="x500_drone_0/camera_link"/>
  <link name="x500_drone_0/camera_link/StereoOV7251"/>
  <link name="x500_depth_0/camera_link/IMX214"/>
  <link name="x500_depth_0/base_link/imu_sensor"/>

  <!-- Drone 0 -->
  <joint name="drone0_base_to_depth" type="fixed">
    <parent link="x500_drone_0/base_link"/>
    <child link="x500_drone_0/x500_depth_0"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>


  <joint name="drone0_base_to_imu" type="fixed">
    <parent link="x500_drone_0/base_link"/>
    <child link="x500_depth_0/base_link/imu_sensor"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <joint name="drone0_depth_to_camera" type="fixed">
    <parent link="x500_drone_0/x500_depth_0"/>
    <child link="x500_drone_0/camera_link"/>
    <origin xyz="0.12 0.03 0.242" rpy="0 0 0"/>
  </joint>

 
  <joint name="drone0_camera_to_imx214" type="fixed">
    <parent link="x500_drone_0/camera_link"/>
    <child link="x500_depth_0/camera_link/IMX214"/>
    <origin xyz="0.0123 -0.03 0.01878" rpy="0 0 0"/>
  </joint>


  <joint name="drone0_camera_to_stereo" type="fixed">
    <parent link="x500_drone_0/camera_link"/>
    <child link="x500_drone_0/camera_link/StereoOV7251"/>
    <origin xyz="0.01233 -0.03 0.01878" rpy="0 0 0"/>
  </joint>


  <!-- Drone 1 -->

  
  <link name="x500_drone_1/base_link"/>
  <link name="x500_drone_1/x500_depth_1"/>
  <link name="x500_drone_1/camera_link"/>
  <link name="x500_drone_1/camera_link/StereoOV7251"/>
  <link name="x500_depth_1/camera_link/IMX214"/>
  <link name="x500_depth_1/base_link/imu_sensor"/>
  
  <joint name="drone1_base_to_depth" type="fixed">
    <parent link="x500_drone_1/base_link"/>
    <child link="x500_drone_1/x500_depth_1"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- base_link → imu -->
  <joint name="drone1_base_to_imu" type="fixed">
    <parent link="x500_drone_1/base_link"/>
    <child link="x500_depth_1/base_link/imu_sensor"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- depth → camera -->
  <joint name="drone1_depth_to_camera" type="fixed">
    <parent link="x500_drone_1/x500_depth_1"/>
    <child link="x500_drone_1/camera_link"/>
    <origin xyz="0.12 0.03 0.242" rpy="0 0 0"/>
  </joint>

  <!-- camera → IMX214 -->
  <joint name="drone1_camera_to_imx214" type="fixed">
    <parent link="x500_drone_1/camera_link"/>
    <child link="x500_depth_1/camera_link/IMX214"/>
    <origin xyz="0.0123 -0.03 0.01878" rpy="0 0 0"/>
  </joint>

  <!-- camera → Stereo -->
  <joint name="drone1_camera_to_stereo" type="fixed">
    <parent link="x500_drone_1/camera_link"/>
    <child link="x500_drone_1/camera_link/StereoOV7251"/>
    <origin xyz="0.01233 -0.03 0.01878" rpy="0 0 0"/>
  </joint>

</robot>
